@{
    ViewData["Title"] = "Anasayfa";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="{{ set[1] }}">
    <meta name="author" content="{{ set[2] }}">
    <meta charset="utf-8" />
    <title>{{ set[0] }}</title>
    <link href="{{ url_for('static', filename='vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="{{ url_for('static', filename='vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet">
    <link href="{{ url_for('static', filename='css/resume.min.css') }}" rel="stylesheet">
</head>
<style type="text/css">
    .arkaplan {
        background-color: forestgreen;
    }
</style>
<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark arkaplan  fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">{{ about[0] }}  {{ about[1] }}</span>
            <span class="d-none d-lg-block">
                <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="/static/img/{{ about[7] }}" alt="profil-foto">
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">Hakkında</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#experience">Deneyimler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#education">Eğitimler</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#skills">Yetenekler</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container-fluid p-0">

        <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
            <div class="my-auto">
                <h1 class="mb-0">
                    {{ about[0] }}
                    <span class="text-primary">{{ about[1] }}</span>
                </h1>
                <div class="subheading mb-5">
                    <a href="mailto:@ViewBag.eposta">{{ about[2] }}</a>
                </div>
                <p class="lead mb-5">{{ about[8] }}</p>
                <div class="social-icons">
                    <a target="_blank" href="{{ SocialMedia[3] }}">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a target="_blank" href="{{ SocialMedia[4] }}">
                        <i class="fab fa-github"></i>
                    </a>
                    <a target="_blank" href="{{ SocialMedia[2] }}">
                        <i class="fab fa-instagram"></i>
                    </a>
                    <a target="_blank" href="{{ SocialMedia[1] }}">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a target="_blank" href="{{ SocialMedia[0] }}">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                </div>
            </div>
        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
            <div class="my-auto">
                <h2 class="mb-5">Deneyimler</h2>

                {% for ex in experince  %}
                <div class="resume-item d-flex flex-column flex-md-row mb-5">
                    <div class="resume-content mr-auto">
                        <h3 class="mb-0">{{ ex[1] }}</h3>
                        <div class="subheading mb-3">{{ ex[2] }}</div>
                        <p>{{ ex[3] }}</p>
                    </div>
                    <div class="resume-date text-md-right">
                        <span class="text-primary">{{ ex[4] }} - {{ ex[5] }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>

        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="education">
            <div class="my-auto">
                <h2 class="mb-5">Eğitimler</h2>
                {% for edu  in education  %}
                <div class="resume-item d-flex flex-column flex-md-row mb-5">
                    <div class="resume-content mr-auto">
                        <h3 class="mb-0">{{ edu[1] }}</h3>
                        <div class="subheading mb-3">{{ edu[2] }}</div>
                        <div>{{ edu[3] }}</div>
                    </div>
                    <div class="resume-date text-md-right">
                        <span class="text-primary">{{ edu[4] }} - {{ edu[5] }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="skills">
            <div class="my-auto">
                <h2 class="mb-5">Yetenekler</h2>
                <ul class="fa-ul mb-0">
                    {% for ab in ability  %}
                    <li>
                        <i class="fa-li fa fa-check"></i>
                        {{ ab[1] }}
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </section>

        <hr class="m-0">

        <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="project">
            <div class="my-auto">
                <h2 class="mb-5">Projeler</h2>

                <div class="resume-item d-flex flex-column flex-md-row mb-5">
                    <div class="resume-content mr-auto">
                        <h3 class="mb-0">@item.ProjeBaslik</h3>
                        <div class="subheading mb-3">@item.ProjeAltBaslik</div>
                        <p>@item.ProjeDetay</p>
                        <img src="https://www.ronnystudio.com/wp-content/uploads/2019/10/ronnystudio-blogpost-androidapp-screen@3x.png" width="250" height="150" alt="projeresim" />
                    </div>
                    <div class="resume-date text-md-right">
                        <span class="text-primary">@item.ProjeTarih</span>
                    </div>
                </div>
            </div>
        </section>
        <hr class="m-0">
    </div>
    <script src="{{ url_for('static', filename='vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ url_for('static', filename='vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ url_for('static', filename='vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ url_for('static', filename='js/resume.min.js') }}"></script>

</body>

</html>